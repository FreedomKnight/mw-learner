{
  "manifest_version": 2,

  "name": "Merriam-Webster Learner's Dictionary",
  "description": "",
  "version": "1.2",
  "browser_action": {
      "default_icon": "icon.png"
  },

  "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "64": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
      {
          "matches": ["*://*/*"],
          "css": ["contents/css/content.css"],
          "js": ["node_modules/axios/dist/axios.min.js", "contents/js/content.js"],
          "run_at": "document_end",
          "all_frames": true
      }
  ],
  "permissions": [
      "contextMenus"
  ]
}
